<!DOCTYPE html>
<html>
    <% include ./partials/head %>
    <body>
        <% include ./partials/nav %>
        <h1><%= title %></h1>
        <table class="table">
            <tr>
                <td>Created at</td>
                <td><%= user.created_at && moment(user.created_at).format(moment_format) %></td>
            </tr>
            <tr>
                <td>Updated at</td>
                <td><%= user.updated_at && moment(user.updated_at).format(moment_format) %></td>
            </tr>
            <tr>
                <td>Status</td>
                <td>
                    <% if(user.status === 'approved' || user.status === 'created') { %>
                        <span class="badge badge-success">
                    <% } else if(user.status === 'rejected') { %>
                        <span class="badge badge-danger">
                    <% } else { %>
                        <span class="badge badge-warning">
                    <% } %>
                        <%= user.status %>
                    </span>
                </td>
            </tr>
            <tr>
                <td>Username</td>
                <td><%= user.username %></td>
            </tr>
            <tr>
                <td>Username booked at</td>
                <td><%= user.username_booked_at && moment(user.username_booked_at).format(moment_format) %></td>
            </tr>
            <tr>
                <td>Email</td>
                <td>
                    <%= user.email %>
                    <% if(user.email_is_verified) { %>
                    <br />
                    <span class="badge badge-success">Verified</span>
                    <% } %>
                </td>
            </tr>
            <tr>
                <td>Last attempt date</td>
                <td><%= user.last_attempt_verify_email && moment(user.last_attempt_verify_email).format(moment_format) %></td>
            </tr>
            <tr>
                <td>Phone number</td>
                <td>
                    <%= user.phone_number %>
                    <% if(user.phone_number_is_verified) { %>
                    <br />
                    <span class="badge badge-success">Verified (<%= user.phone_code_attempts %> attempts)</span>
                    <% } %>
                </td>
            </tr>
            <tr>
                <td>Last attempt date</td>
                <td><%= user.last_attempt_verify_phone_number && moment(user.last_attempt_verify_phone_number).format(moment_format) %></td>
            </tr>
            <tr>
                <td>Phone code</td>
                <td><%= user.phone_code %></td>
            </tr>
            <tr>
                <td>Ip</td>
                <td><%= user.ip %></td>
            </tr>
            <tr>
                <td>Fingerprint</td>
                <td>
                    <div>
                        <pre><%= JSON.stringify(user.fingerprint, null, 2) %></pre>
                    </div>
                </td>
            </tr>
        </table>
        <% if(user.status === 'manual_review') { %>
            <button type="button" class="btn btn-success" onclick="javascript:setUser(<%= user.id %>)" data-toggle="modal" data-target="#approveUserModal">Approve</button>
            &nbsp;&nbsp;
            <button type="button" class="btn btn-warning" onclick="javascript:setUser(<%= user.id %>)" data-toggle="modal" data-target="#rejectUserModal">Reject</button>
            <div class="modal fade" id="approveUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Approve User</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Do you want to <strong>approve</strong> this user ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            <button type="button" class="btn btn-success" data-dismiss="modal" onclick="javascript:approveUser()">Yes</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="rejectUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Approve User</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Do you want to <strong>reject</strong> this user ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="javascript:rejectUser()">Yes</button>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
              var user;
              function setUser(id) {
                user = id;
              }
              function approveUser() {
                $.post('/approve',
                  { id: user  }
                )
                  .done(function( data ) {
                    if(data.success) {
                      alert( "User approved");
                    } else {
                      alert( "An error occurred, please check the console logs");
                      console.log(data);
                    }
                  });
              }

              function rejectUser() {
                $.post('/reject',
                  { id: user  }
                )
                  .done(function( data ) {
                    if(data.success) {
                      alert( "User rejected");
                    } else {
                      alert( "An error occurred, please check the console logs");
                      console.log(data);
                    }
                  });
              }
            </script>
        <% } %>
    </body>
</html>
