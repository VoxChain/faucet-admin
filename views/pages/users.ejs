<table class="table table-sm">
    <thead class="thead-default">
        <tr>
            <th><input type="checkbox" onclick="javascript:toggleAll()" id="toggleAll" /></th>
            <th>Created at</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Username</th>
        </tr>
    </thead>
    <tbody>
    <% users.forEach(function(user) { %>
    <tr id="<%= user.id %>">
        <td>
            <input type="checkbox" value="<%= user.id %>" />
        </td>
        <td><%= moment(user.created_at).format(moment_format) %></td>
        <td>
            <a href="/user/<%= user.id %>"><%= user.email %></a>
            <% if(user.email_is_verified) { %>
                <br />
                <span class="badge badge-success">Verified</span>
            <% } %>
        </td>
        <td>
            <%= user.phone_number %>
            <% if(user.phone_number_is_verified) { %>
                <br />
                <span class="badge badge-success">Verified (<%= user.phone_code_attempts %> attempts)</span>
            <% } %>
        </td>
        <td><%= user.username %></td>
    </tr>
    <% }); %>
    </tbody>
</table>
<% if(showActions) { %>
    <button type="button" class="btn btn-success" onclick="javascript:prepareAction('approveUser')">Approve</button>
    &nbsp;&nbsp;
    <button type="button" class="btn btn-warning" onclick="javascript:prepareAction('rejectUser')">Reject</button>
    &nbsp;&nbsp;
<% } %>
<button type="button" class="btn btn-danger" onclick="javascript:prepareAction('deleteUser')">Delete</button>
<nav aria-label="Page navigation example">
<ul class="pagination">
    <% if(page > 1) { %>
        <li class="page-item"><a class="page-link" href="/<%= location %>?page=<%= (page-1) %>">Previous</a></li>
    <% } %>
    <% if (showLast) { %>
        <li class="page-item"><a class="page-link" href="/<%= location %>?page=<%= (page + 1)  %>">Next</a></li>
    <% } %>
</ul>
</nav>
<% include ../components/user-modal %>
<% include ../components/result-modal %>
<script type="text/javascript">
  function toggleAll() {
    var status = $('#toggleAll').is(':checked');
    $('input[type="checkbox"]').each(
      function(o) {
        $(this).prop('checked',status);
      }
    );
  }
</script>
